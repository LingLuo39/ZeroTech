<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DesignatorDropdownGroupDef>
    <defName>LingCrystalPillar</defName>
  </DesignatorDropdownGroupDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>LingCrystalPillarBase</defName>
    <label>Crystal Pillar Base</label>
    <description>一个美观的灯,可以进行升级以获得更多的能力</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.30</fillPercent>
    <pathCost>4</pathCost>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
	<resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <designationCategory>Furniture</designationCategory>
    <rotatable>false</rotatable>
    <designatorDropdown>LingCrystalPillar</designatorDropdown>
    <uiIconOffset>(0, 0.2)</uiIconOffset>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Building/Furniture/LingCrystalPillarBase</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(6,6)</drawSize>
    </graphicData>
	<uiIconScale>0.35</uiIconScale>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <comps>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass>
        <basePowerConsumption>-100</basePowerConsumption>
      </li>
    </comps>
    <statBases>
      <Mass>2</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
    <costList>
      <Steel>20</Steel>
      <Plasteel>10</Plasteel>
      <Jade>5</Jade>
    </costList>
  </ThingDef>

