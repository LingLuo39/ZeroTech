  <TraitDef>
    <defName>Ling_NoGod_Dysmelia</defName>
    <commonality>0.1</commonality>
    <degreeDatas>
      <li>
        <label>肢体畸形</label>
        <description>{PAWN_nameDef}的身体宛如重灾车祸现场一般,而且{PAWN_pronoun}由于肢体的畸形导致各方面的能力都弱于常人.</description>
        <statOffsets>
          <PawnBeauty>-4</PawnBeauty>
          <GlobalLearningFactor>-0.3</GlobalLearningFactor>
          <ImmunityGainSpeed>-0.05</ImmunityGainSpeed>
          <WorkSpeedGlobal>-0.4</WorkSpeedGlobal>
          <MoveSpeed>-0.3</MoveSpeed>
        </statOffsets>
      </li>
    </degreeDatas>
  </TraitDef>

