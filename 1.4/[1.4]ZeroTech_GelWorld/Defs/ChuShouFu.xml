  <ThoughtDef>
    <defName>ToucherToHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>ToucherToHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>乐思信号</label>
