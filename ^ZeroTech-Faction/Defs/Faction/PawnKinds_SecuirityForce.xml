<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <PawnKindDef Name="Ling_Moon_KindBase" Abstract="True">
    <race>Human</race>
    <defaultFactionType>LingMoonFaction</defaultFactionType>
    <baseRecruitDifficulty>1</baseRecruitDifficulty>
    <backstoryFiltersOverride>
      <li>
        <categories>
          <li>ImperialFighter</li>
          <li>Offworld</li>
          <li>Outlander</li>
          <li>Outsider</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <chemicalAddictionChance>0</chemicalAddictionChance>
    <invNutrition>4.5</invNutrition>
    <itemQuality>Good</itemQuality>
    <!-- <minGenerationAge>15</minGenerationAge> -->
    <maxGenerationAge>27</maxGenerationAge>
    <gearHealthRange>
      <min>2</min>
      <max>3</max>
    </gearHealthRange>
    <apparelMoney>
      <min>0</min>
      <max>0</max>
    </apparelMoney>
    <techHediffsChance>0</techHediffsChance>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
    <techHediffsMoney>
      <min>0</min>
      <max>0</max>
    </techHediffsMoney>
	<techHediffsRequired>
	  <li>ArchotechEye</li>
	  <li>ArchotechEye</li>
	  <li>ArchotechArm</li>
	  <li>ArchotechArm</li>
	  <li>ArchotechLeg</li>
	  <li>ArchotechLeg</li>
	  <li>DeathAcidifier</li>
	  <li>Painstopper</li>
	</techHediffsRequired>
	<disallowedTraits>
	  <li>Jealous</li>
	  <li>Pyromaniac</li>
	  <li>Wimp</li>
	  <li>Jealous</li>
	  <li>Greedy</li>
	  <li>Beauty</li>
	  <li>PsychicSensitivity</li>
	</disallowedTraits>
    <combatEnhancingDrugsCount>
      <min>0</min>
      <max>0</max>
    </combatEnhancingDrugsCount>
    <combatEnhancingDrugsChance>0</combatEnhancingDrugsChance>
    <inventoryOptions>
      <skipChance>0</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>120</min>
            <max>480</max>
          </countRange>
        </li>
        <li>
          <thingDef>MedicineIndustrial</thingDef>
          <countRange>
            <min>1</min>
            <max>2</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
    <aiAvoidCover>true</aiAvoidCover>
    <apparelRequired>
      <li>Apparel_Ling_Moon_LightShirt</li>
      <li>Apparel_Ling_Moon_Duster</li>
      <li>Apparel_Ling_Moon_Necklace</li>
      <li>Apparel_Ling_Moon_Glove</li>
      <li>Apparel_Ling_Moon_Boots</li>
      <li>Apparel_Ling_MoonShield_WaterMoon</li>
      <li>Apparel_Ling_Moon_BodyFix</li>
    </apparelRequired>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <!-- <apparelColor>(1,1,1)</apparelColor> -->
    <invFoodDef>MealLavish</invFoodDef>
  </PawnKindDef>
