<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- 步枪-激光1200 -->
  <ThingDef ParentName="LingBaseMoonGun">
    <defName>Gun_Ling_Luo_Laser</defName>
    <label>LL激光发射器</label>
    <description>一个朴实无华的金属棒,可以发射出强烈的激光</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Gun_Ling_Moon_RifleSharp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <Mass>2.5</Mass>
      <MarketValue>1200</MarketValue>
      <AccuracyTouch>1.6</AccuracyTouch>
      <AccuracyShort>1.6</AccuracyShort>
      <AccuracyMedium>1.6</AccuracyMedium>
      <AccuracyLong>1.6</AccuracyLong>
      <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>10</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <weaponTags>
      <li>LingBaseMoonGunGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Ling_Luo_Laser</defaultProjectile>
        <warmupTime>1.35</warmupTime>
        <range>35</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>bayonet</label>
        <capacities>
          <li>Cut</li>
          <li>Stab</li>
        </capacities>
        <power>21</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Ling_Luo_Laser</defName>
    <label>能量束</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeLanceShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>1</drawSize>
    </graphicData>
	<thingClass>LingGame.TacticsBullet</thingClass>
    <projectile>
      <damageDef>MoonSharp</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <armorPenetrationBase>0.6</armorPenetrationBase>
      <speed>60</speed>
    </projectile>
  </ThingDef>
 
</Defs>
